<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="HomeTheme"  parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#A8A8A8</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/actionbar_home_color</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/actionbar_home_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/hind_vadodara_medium</item>
    </style>


    <style name="BrowserTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary"> #FC6600</item>
        <item name="colorPrimaryDark">#B44424</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="AppBarColor" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
